<!--　最近の投稿 -->

<h1 class="text-center">最新の投稿一覧</h1>
<div class="post-cardss latest row">
        <% @post.each do |post| %>
          <div class="post-cardss col-md-4 col-sm-6">
            <div class="post-cardss-img">
               <% if post.image_id.present? %>
            　　<%=link_to (image_tag attachment_url(post, :image, :fill, 300, 260,  format: "jpg")), "/posts/show/#{post.id}", class: 'post-photo' %>
         　　　 <% else %>
               <%=link_to (image_tag('/images/default.jpg',size: '350x300', class: 'img-responsive padding-top-15')), "/posts/show/#{post.id}", class: 'post-photo' %>
               <% end %>
            </div>

<% if post.user.avatar_id.present? %>
  <%= image_tag attachment_url(post.user, :avatar, :fill, 70, 70, format: "jpg") %>
<% else %>
  <%= image_tag('/images/default.jpg',size: '70x70', class: 'img-responsive padding-top-15') %>
<% end %>

                    <div class="post-footer-names" style="line-height: 30px;">
                <%= link_to "@#{post.user.username}", "/users/show/#{post.user_id}", class: "post-footer-username" %>
                 <% if current_user.already_liked?(post) %>
           <i class="fas fa-heart unlike-btn"></i></span>
           <% else %>
           <i class="far fa-heart like-btn" ></i></span>
           <% end %>
           <%= post.likes.count %>
                 </span>


              </div>
          </div>
        <% end %>
      </div>

